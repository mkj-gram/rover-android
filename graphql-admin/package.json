{
  "name": "@rover/graphql-admin",
  "version": "1.0.0",
  "description": "Rover administration api gateway",
  "main": "src/index.ts",
  "private": true,
  "author": "Rover.io",
  "scripts": {
    "start": "nodemon -L src --exec ts-node",
    "build": "rm -rf ./dist && tsc",
    "test": "jest"
  },
  "dependencies": {
    "@rover-common/grpc-promisify": "../node/grpc-promisify",
    "@rover/apis": "../apis/node",
    "@rover/auth-client": "../auth/clients/node",
    "@types/graphql-iso-date": "3.3.0",
    "@types/body-parser": "1.17.0",
    "@types/express":"4.11.1",
    "apollo-server-express": "1.3.6",
    "body-parser": "1.18.3",
    "express": "4.16.3",
    "google-auth-library": "1.4.0",
    "graphql-iso-date": "3.5.0",
    "graphql": "0.13.2",
    "graphql-tools":"3.0.1"
  },
  "devDependencies": {
    "nodemon": "^1.17.3",
    "ts-node": "^6.0.2",
    "typescript": "2.8.1",
    "@types/jest": "^22.2.3",
    "jest": "^22.4.3",
    "ts-jest": "^22.4.5"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "./dist"
    ],
    "coverageReporters": [
      "lcov",
      "html"
    ]
  }
}
