{
    "name": "@rover/graphql-admin",
    "version": "1.0.0",
    "description": "Rover administration api gateway",
    "main": "src/index.ts",
    "private": true,
    "author": "Rover.io",
    "scripts": {
        "start": "nodemon -L src --exec ts-node",
        "build": "rm -rf ./dist && tsc",
        "test": "jest"
    },
    "dependencies": {
        "@rover-common/grpc-promisify": "../node/grpc-promisify",
        "@rover/apis": "../apis/node",
        "@rover/auth-client": "../auth/clients/node",
        "apollo-server-express": "1.3.6",
        "body-parser": "1.18.3",
        "continuation-local-storage": "3.2.1",
        "cors": "2.8.4",
        "dataloader": "1.4.0",
        "express": "4.16.3",
        "firebase-admin": "5.12.1",
        "graphql": "0.13.2",
        "graphql-iso-date": "3.5.0",
        "graphql-tools": "3.0.1",
        "pino": "4.16.1",
        "uuid": "3.2.1"
    },
    "devDependencies": {
        "@types/body-parser": "1.17.0",
        "@types/continuation-local-storage": "3.2.1",
        "@types/cors": "2.8.4",
        "@types/express": "4.11.1",
        "@types/graphql-iso-date": "3.3.0",
        "@types/pino": "4.7.1",
        "@types/uuid": "3.4.3",
        "@types/jest": "^22.2.3",
        "nodemon": "^1.17.3",
        "ts-node": "^6.0.2",
        "typescript": "2.8.1",
        "jest": "^22.4.3",
        "ts-jest": "^22.4.5"
    },
    "jest": {
        "testEnvironment": "node",
        "moduleFileExtensions": [
            "ts",
            "js"
        ],
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "testPathIgnorePatterns": [
            "/node_modules/",
            "./dist"
        ],
        "coverageReporters": [
            "lcov",
            "html"
        ]
    }
}
