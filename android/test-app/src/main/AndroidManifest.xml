<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="io.rover.androidtestapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".RoverAndroidTestApplication"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="io.rover.androidtestapp.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- This is the custom entry for Rover's Standalone Experience Activity that you can add
             in order to set your style and an optional parent activity for use when Experiences
             are launched directly from push notifications. -->
        <activity
            android:name="io.rover.rover.experiences.ui.containers.StandaloneExperienceHostActivity"
            tools:replace="android:theme"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".MainActivity"
        />

        <activity android:name="io.rover.rover.experiences.ui.TransientLinkLaunchActivity">
            <!-- for deep links -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="rv-inbox" />
            </intent-filter>

            <!-- for http universal links/app links -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="http" android:host="rover.rover.io" />
            </intent-filter>

            <!-- for https universal links/app links -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="https" android:host="rover.rover.io" />
            </intent-filter>
        </activity>

        <service
            android:name=".MyAppCustomFirebaseReceiver">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

        <service
            android:name=".MyAppFirebaseInstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>
    </application>
</manifest>
