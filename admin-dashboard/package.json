{
    "name": "admin-dashboard",
    "version": "1.0.0",
    "description": "Rover Administration Dashboard",
    "author": "Rover.io",
    "main": "src/index.tsx",
    "scripts": {
        "start": "webpack-dev-server -d --hot --inline --host 0.0.0.0 --port 9000",
        "build": "rm -rf ./dist && webpack --config webpack.config.js",
        "test": "jest"
    },
    "dependencies": {
        "apollo-link": "^1.0.7",
        "apollo-link-http": "^1.3.2",
        "firebase": "5.0.1",
        "firebaseui": "^3.0.0",
        "graphql": "^0.12.3",
        "graphql-tag": "^2.6.1",
        "react": "^16.4.0",
        "react-dom": "^16.4.0",
        "react-router-dom": "^4.2.2"
    },
    "devDependencies": {
        "@types/react": "^16.3.14",
        "@types/react-dom": "^16.0.5",
        "@types/react-router-dom": "^4.2.3",
        "css-loader": "^0.28.7",
        "html-webpack-plugin": "^2.30.1",
        "ip": "^1.1.5",
        "style-loader": "^0.21.0",
        "ts-loader": "^3.2.0",
        "tslint": "^5.7.0",
        "tslint-loader": "^3.5.3",
        "tslint-react": "^3.2.0",
        "typescript": "2.8.1",
        "uglifyjs-webpack-plugin": "^1.1.5",
        "webpack": "^3.10.0",
        "webpack-dev-server": "^2.9.7",
        "@types/jest": "^22.2.3",
        "jest": "^22.4.3",
        "ts-jest": "^22.4.5"
    },
    "jest": {
        "testEnvironment": "node",
        "moduleFileExtensions": [
            "ts",
            "js",
            "tsx",
            "jsx"
        ],
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "testPathIgnorePatterns": [
            "/node_modules/",
            "./dist"
        ],
        "coverageReporters": [
            "lcov",
            "html"
        ]
    }
}
